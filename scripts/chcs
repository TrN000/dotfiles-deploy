"""
replace some lines in a text delimited by marker
"""

import os
import argparse

DELIM = '!!!! Color scheme'
file = os.path.expanduser('~/.Xresources')

cs_vscode_dark = """
!! name: VSCode Dark,
.*foreground: #CCCCCC
.*background: #1E1E1E
.*cursorColor: #888888
.*color0: #000000
.*color1: #cd3131
.*color2: #0DBC79
.*color3: #e5e510
.*color4: #2472c8
.*color5: #bc3fbc
.*color6: #11a8cd
.*color7: #e5e5e5
.*color8:  #666666
.*color9:  #f14c4c
.*color10: #23d18b
.*color11: #f5f543
.*color12: #3b8eea
.*color13: #d670d6
.*color14: #29b8db
.*color15: #e5e5e5

"""

