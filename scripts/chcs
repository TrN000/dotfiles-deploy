cs_monokai = """
!! monokai
! special
*.foreground:   #f1ebeb
*.background:   #272822
*.cursorColor:  #f1ebeb

! black
*.color0:       #48483e
*.color8:       #76715e

! red
*.color1:       #dc2566
*.color9:       #fa2772

! green
*.color2:       #8fc029
*.color10:      #a7e22e

! yellow
*.color3:       #d4c96e
*.color11:      #e7db75

! blue
*.color4:       #55bcce
*.color12:      #66d9ee

! magenta
*.color5:       #9358fe
*.color13:      #ae82ff

! cyan
*.color6:       #56b7a5
*.color14:      #66efd5

! white
*.color7:       #acada1
*.color15:      #cfd0c2

"""


color_schemes = {
        "vsdark": cs_vscode_dark,
        "gotham": cs_gotham,
        "unknown": cs_unknown,
        "tartan": cs_tartan,
        "kasugano": cs_kasugano,
        "kasugano_light": cs_kasugano_light,
        "monokai": cs_monokai,
        "monokai_d": cs_monokai_d,
        "solarized": cs_solarized
        }


if __name__ == '__main__':
    parser = argparse.ArgumentParser(description='Change color scheme in .Xresources.')
    parser.add_argument("scheme", choices=color_schemes.keys())
    args = parser.parse_args()

    with open(file) as f:
        text = f.read()

    new_text = text.split(DELIM)
    new_text[1] = color_schemes[args.scheme]
    assert len(new_text) == 3, \
            "Only one delimited Block allowed in file."

    with open(file, 'w') as f:
        f.write(DELIM.join(new_text))

    os.system('xrdb ~/.Xresources')


